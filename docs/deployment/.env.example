# DMH系统环境配置文件
# 复制此文件为.env并修改相应配置

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_password_here

# JWT密钥配置
JWT_SECRET=your_jwt_secret_key_change_in_production_at_least_32_chars

# 应用配置
APP_ENV=production
APP_DEBUG=false
APP_PORT=8080

# 域名配置
ADMIN_DOMAIN=admin.dmh.com
H5_DOMAIN=h5.dmh.com
API_DOMAIN=api.dmh.com

# SSL证书配置
SSL_CERT_PATH=/etc/nginx/ssl/dmh.crt
SSL_KEY_PATH=/etc/nginx/ssl/dmh.key

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@dmh.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=DMH System <noreply@dmh.com>

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/app/uploads

# 安全配置
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30
SESSION_TIMEOUT=480
MAX_CONCURRENT_SESSIONS=3

# 缓存配置
CACHE_DRIVER=redis
CACHE_TTL=3600

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=30
LOG_MAX_AGE=30

# 监控配置（可选）
ENABLE_METRICS=true
METRICS_PORT=9090